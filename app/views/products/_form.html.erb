<%= form_for(@product, :html => {:class =>"form-horizontal", :multipart => true}) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h6><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h6>
      <% @product.errors.full_messages.each do |message| %>
          <div class="alert alert-error">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= message %>
          </div>
      <% end %>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => "control-label" %>
    <div class="controls">
      <%= f.text_area :description %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => "control-label" %>
    <div class="controls">
      <div class='input-append'>
        <%= f.text_field :price %>
        <span class="add-on">â‚¬</span>
      </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :stock, :class => "control-label" %>
    <div class="controls">
      <%= f.number_field :stock %>

    </div>
  </div>
  <div class="control-group">
    <%= f.label :photo, :class => "control-label" %>
    <div class="controls">
      <%= f.file_field :photo %>

    </div>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
